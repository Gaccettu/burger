<h1>Eat da Burger</h1>

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
          <p>{{this.id}} {{this.burger_name}} <button type="submit" data-id="{{id}}" data-newDevoured = "{{devoured}}" class="devour">Devour it!</button></p>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers I've Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      <p>{{this.id}} {{this.burger_name}}</p>
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>